# Fibonacci calculator using stack pointer abuse

@macro swds
            swd
            sws
            swd
@end

fibonacci:
            isp -1
            swd
            strs 0
            swds
            lui 0x0
            swd
            stra 0      # prepare for SP abuse
            lui 0b0000
            addi 1

fibloop:    add
            swd
            isp -1
            jif fibloop

            sws
            lui 0x0
            swd
            lda 0       # SP abuse done
            sws
            
            swd
            lds 0
            swd
            isp 1
            ret

main:
            andi 0
            wrs
            ioa
            jsr fibonacci
            ioa